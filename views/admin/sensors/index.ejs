<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sensores</title>
  <%- include('../../imports'); -%>
</head>
<body>
  <%- include('../../navbar'); -%>
  <div class="container">
    <div class="row">
        <h1>Administração de Sensores</h1>
    </div>

    <div class="row mb-2">
        <a href="/admin/sensors/create" class="btn btn-success">Novo Sensor</a>
    </div>

    <div class="row">
        <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Código</th>
                <th scope="col">Título</th>
              </tr>
            </thead>
            <tbody>
              <% sensors.forEach((sensor) => { %>
                <tr>
                  <td><%= sensor.id %></td>
                  <td><%= sensor.name %></td>
                </tr>
              <% }); %>
              
            </tbody>
          </table>
    </div>
  </div>
</body>
</html>